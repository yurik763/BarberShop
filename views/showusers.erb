<table class="table table-striped">
  <thead>
    <tr>
      <th>id</th>
      <th>Имя</th>
      <th>Телефон</th>
      <th>Время записи</th>
      <th>Парикмахер</th>
      <th>Цвет</th>
    </tr>
  </thead>
  <tbody>
  <% @results.each do |row| %>
    <tr>
      <td><%= row['id'] %></td>
      <td><%= row['username'] %></td>
      <td><%= row['phone'] %></td>
      <td><%= row['datestamp'] %></td>
      <td><%= row['barber'] %></td>
      <td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
    </tr>
  </tbody>
  <% end %>
</table>